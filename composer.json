{
    "name": "hibla/stream",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "hiblaphp/event-loop": "dev-main",
        "hiblaphp/promise": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "Hibla\\Stream\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "laravel/pint": "^1.10",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "hiblaphp/task": "dev-main"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "format": "./vendor/bin/pint",
        "format-test": "./vendor/bin/pint --test",
        "analyze": "./vendor/bin/phpstan analyse",
        "test-unit": "./vendor/bin/pest tests/Unit",
        "test-integration": "./vendor/bin/pest tests/Integration",
        "test-feature": "./vendor/bin/pest tests/Feature"
    }
}